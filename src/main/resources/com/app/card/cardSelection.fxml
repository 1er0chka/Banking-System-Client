<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>

<?import javafx.scene.control.Button?>
<?import javafx.geometry.Insets?>
<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.app.controller.card.CardSelectionController"
      stylesheets="/styles/popUpWindow.css" styleClass="v-box-background"
      alignment="CENTER">
    <FlowPane fx:id="fpCards" alignment="TOP_CENTER" minWidth="1164" hgap="20" vgap="20">
        <VBox.margin>
            <Insets top="20"/>
        </VBox.margin>
    </FlowPane>
    <HBox alignment="CENTER">
        <Button text="Отмена" prefHeight="40" prefWidth="140" onAction="#cancel">
            <HBox.margin>
                <Insets top="20" bottom="15" left="10"/>
            </HBox.margin>
        </Button>
        <Button text="Выбрать" prefHeight="40" prefWidth="140" onAction="#choose">
            <HBox.margin>
                <Insets top="20" bottom="15" left="95"/>
            </HBox.margin>
        </Button>
    </HBox>
</VBox>
